{
  "name": "hyperscape-dev",
  "version": "2.0.0",
  "description": "Hyperscape AI-powered 3D multiplayer game development plugin for Claude Code",
  "author": {
    "name": "Hyperscape Team",
    "email": "team@hyperscape.ai",
    "url": "https://github.com/HyperscapeAI"
  },
  "homepage": "https://github.com/HyperscapeAI/hyperscape",
  "repository": {
    "type": "git",
    "url": "https://github.com/HyperscapeAI/hyperscape"
  },
  "bugs": {
    "url": "https://github.com/HyperscapeAI/hyperscape/issues"
  },
  "license": "UNLICENSED",
  "engines": {
    "claude-code": ">=2.0.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Game Development",
    "AI Agents",
    "Testing",
    "3D Graphics",
    "TypeScript"
  ],
  "tags": [
    "hyperscape",
    "elizaos",
    "3d",
    "game-dev",
    "ai-agents",
    "testing",
    "threejs",
    "multiplayer",
    "rpg",
    "playwright",
    "visual-testing",
    "mcp-server"
  ],
  "keywords": [
    "hyperscape",
    "eliza",
    "ai-agents",
    "3d-engine",
    "multiplayer",
    "rpg",
    "testing",
    "playwright",
    "typescript",
    "threejs",
    "websocket",
    "ecs"
  ],
  "displayName": "Hyperscape Development Plugin",
  "icon": "🎮",
  "screenshots": [
    {
      "url": "https://hyperscape.ai/assets/plugin-screenshot-1.png",
      "caption": "Visual testing with colored cube proxies"
    },
    {
      "url": "https://hyperscape.ai/assets/plugin-screenshot-2.png",
      "caption": "Real-time agent testing in 3D world"
    },
    {
      "url": "https://hyperscape.ai/assets/plugin-screenshot-3.png",
      "caption": "MCP server tools in action"
    }
  ],
  "features": [
    "🔧 MCP server with 9 specialized development tools (v2.0)",
    "⌨️  8 slash commands for common workflows",
    "🤖 4 specialized AI agents for domain expertise",
    "🪝 Custom hooks for code quality and testing",
    "🧠 Automated memory extraction from chat history",
    "📋 Rule generation from development sessions",
    "🎯 TypeScript strong typing validation",
    "🎨 Visual testing with colored cube proxies",
    "🤖 Multi-agent testing support",
    "📊 Error log analysis and suggestions",
    "⚡ Action scaffolding generator",
    "📈 Performance monitoring and caching"
  ],
  "requirements": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0",
    "typescript": ">=5.9.0",
    "playwright": ">=1.40.0"
  },
  "environment": {
    "required": [
      {
        "name": "HYPERSCAPE_PROJECT_ROOT",
        "description": "Absolute path to the Hyperscape project root directory",
        "example": "/Users/username/dev/hyperscape"
      },
      {
        "name": "ANTHROPIC_API_KEY",
        "description": "API key for Claude/Anthropic services (memory extraction)",
        "example": "sk-ant-..."
      }
    ],
    "optional": [
      {
        "name": "OPENAI_API_KEY",
        "description": "OpenAI API key for enhanced memory extraction features",
        "example": "sk-..."
      }
    ]
  },
  "setup": {
    "install": [
      "cd .claude-plugin/mcp && npm install && npm run build",
      "cd .claude-plugin/memory-tools && npm install && npm run build"
    ],
    "configure": [
      "Set ANTHROPIC_API_KEY environment variable",
      "Set HYPERSCAPE_PROJECT_ROOT to workspace folder",
      "Verify MCP server: claude mcp list"
    ],
    "verify": [
      "Run /check-types to verify plugin is working",
      "Test MCP tools: Use hyperscape_health_check",
      "Check hooks are active: git status (should trigger validation)"
    ]
  },
  "documentation": {
    "readme": "README.md",
    "installation": "INSTALL.md",
    "usage": "USAGE.md",
    "changelog": "CHANGELOG.md",
    "architecture": "ARCHITECTURE.md",
    "contributing": "CONTRIBUTING.md"
  },
  "commands": {
    "directory": "commands/",
    "count": 8,
    "categories": {
      "testing": ["test-rpg", "test-visual", "run-agent"],
      "development": ["create-action", "build-plugin", "check-types"],
      "analysis": ["analyze-errors", "extract-memories"]
    }
  },
  "agents": {
    "directory": "agents/",
    "count": 4,
    "available": [
      {
        "name": "rpg-action-developer",
        "description": "Specialized in RPG action implementation and ElizaOS patterns"
      },
      {
        "name": "hyperscape-test-engineer",
        "description": "Expert in real-world testing with Playwright and visual verification"
      },
      {
        "name": "typescript-enforcer",
        "description": "Strong typing validator ensuring no any/unknown types"
      },
      {
        "name": "visual-test-analyst",
        "description": "Screenshot analysis and colored cube proxy expert"
      }
    ]
  },
  "hooks": {
    "directory": "hooks/",
    "count": 4,
    "available": ["validate-write.sh", "validate-types.sh", "pre-commit.sh", "post-test.sh"]
  },
  "mcp_servers": {
    "hyperscape-dev": {
      "transport": "stdio",
      "command": "node",
      "args": ["mcp/dist/server.js"],
      "tools": 9,
      "features": [
        "Type validation with caching",
        "Visual test execution",
        "Action generation",
        "Log analysis",
        "World state queries",
        "RPG state inspection",
        "Performance metrics",
        "Cache management",
        "Health checks"
      ]
    }
  },
  "permissions": {
    "filesystem": {
      "read": [
        "packages/plugin-hyperscape/**",
        "logs/**",
        "characters/**"
      ],
      "write": [
        "packages/plugin-hyperscape/src/**/*.ts",
        ".cursor/memory/**",
        ".cursor/rules/**"
      ],
      "deny": [
        "packages/plugin-hyperscape/node_modules/**",
        "**/.env",
        "**/credentials.json"
      ]
    },
    "commands": {
      "allow": [
        "cd packages/plugin-hyperscape*",
        "bun run *",
        "bun test *",
        "npm run *",
        "node *",
        "grep *",
        "git status",
        "git diff"
      ],
      "deny": [
        "rm -rf *",
        "sudo *",
        "curl *",
        "wget *"
      ]
    }
  },
  "rules": {
    "typescript": {
      "noAny": true,
      "noUnknown": true,
      "explicitReturnTypes": true,
      "strictNullChecks": true
    },
    "testing": {
      "noMocks": true,
      "realWorlds": true,
      "visualVerification": true,
      "multimodalValidation": true
    },
    "fileManagement": {
      "preferEditing": true,
      "noVersionedFiles": true,
      "cleanupOrphans": true,
      "updateImports": true
    },
    "codeQuality": {
      "noHardcodedData": true,
      "selfContained": true,
      "modularDesign": true,
      "documentPublicApis": true
    }
  },
  "compatibility": {
    "claude-code": ">=2.0.0",
    "platforms": ["darwin", "linux", "win32"],
    "conflicts": [],
    "dependencies": []
  },
  "telemetry": {
    "enabled": false,
    "privacy": "All data stays local, no telemetry collected"
  },
  "support": {
    "documentation": "https://github.com/HyperscapeAI/hyperscape/blob/main/.claude-plugin/README.md",
    "issues": "https://github.com/HyperscapeAI/hyperscape/issues",
    "discussions": "https://github.com/HyperscapeAI/hyperscape/discussions"
  }
}
